<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#53B19D</item>
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">#53B19D</item>
        <item name="colorAccent">#D0E6A5</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button_1" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#53B19D</item>
        <item name="android:textColor">#B2000000</item>
    </style>

    <style name="Button_2" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#ffffff</item>
        <item name="android:textColor">#53B19D</item>
    </style>

    <style name="Button_3" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#ffffff</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Back_Button" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">#53B19D</item>
        <item name="colorAccent">#53B19D</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
